<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RealEstateApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RealEstateApp.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">RealEstateApp</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Properties" asp-action="Index">Browse Properties</a>
                        </li>

                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Favorites" asp-action="MyFavorites">My Favorites</a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-white" href="#" id="myListingsDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    My Listings
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="myListingsDropdown">
                                    <li><a class="dropdown-item" asp-controller="Properties" asp-action="MyProperties"><i class="bi bi-house"></i> All My Properties</a></li>
                                    <li><a class="dropdown-item" asp-controller="Transactions" asp-action="IncomingRequests"><i class="bi bi-inbox"></i> Incoming Requests</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-controller="Transactions" asp-action="SoldProperties"><i class="bi bi-house-check"></i> Sold Properties</a></li>
                                    <li><a class="dropdown-item" asp-controller="Transactions" asp-action="RentedProperties"><i class="bi bi-key"></i> Rented Properties</a></li>
                                </ul>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-white" href="#" id="myTransactionsDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    My Transactions
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="myTransactionsDropdown">
                                    <li><a class="dropdown-item" asp-controller="Transactions" asp-action="MyRequests"><i class="bi bi-send-check"></i> My Requests</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-controller="Transactions" asp-action="MyPurchases"><i class="bi bi-cart-check"></i> My Purchases</a></li>
                                    <li><a class="dropdown-item" asp-controller="Transactions" asp-action="MyRentals"><i class="bi bi-key-fill"></i> My Rentals</a></li>
                                </ul>
                            </li>
                        }

                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-warning fw-bold" asp-controller="Admin" asp-action="Index">Admin Panel</a>
                            </li>
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - RealEstateApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>