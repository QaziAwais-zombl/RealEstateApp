@model IEnumerable<RealEstateApp.Models.Transaction>

@{
    ViewData["Title"] = "My Sold Properties";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-house-check"></i> My Sold Properties</h2>
        <a asp-controller="Properties" asp-action="MyProperties" class="btn btn-outline-primary">
            <i class="bi bi-arrow-left"></i> Back to My Listings
        </a>
    </div>

    @if (Model.Any())
    {
        <div class="row">
            @foreach (var transaction in Model)
            {
                <div class="col-md-6 mb-4">
                    <div class="card shadow-sm h-100">
                        <div class="row g-0">
                            <div class="col-md-4">
                                @if (!string.IsNullOrEmpty(transaction.Property?.ImageUrl))
                                {
                                    <img src="@transaction.Property.ImageUrl" class="img-fluid rounded-start h-100" alt="@transaction.Property.Title" style="object-fit: cover;">
                                }
                                else
                                {
                                    <div class="bg-secondary text-white text-center h-100 d-flex align-items-center justify-content-center">
                                        <i class="bi bi-house-door" style="font-size: 3rem;"></i>
                                    </div>
                                }
                            </div>
                            <div class="col-md-8">
                                <div class="card-body">
                                    <span class="badge bg-success mb-2">Sold</span>
                                    <h5 class="card-title">@transaction.Property?.Title</h5>
                                    <p class="card-text text-muted small">
                                        <i class="bi bi-geo-alt"></i> @transaction.Property?.Address
                                    </p>
                                    <p class="card-text"><strong>Sale Price:</strong> @transaction.TransactionAmount.ToString("C")</p>
                                    <p class="card-text"><strong>Sale Date:</strong> @transaction.TransactionDate.ToString("MMM dd, yyyy")</p>
                                    
                                    <hr />
                                    <h6 class="text-primary"><i class="bi bi-person"></i> Buyer Information</h6>
                                    <p class="card-text small mb-1"><strong>Name:</strong> @transaction.BuyerRenterName</p>
                                    <p class="card-text small mb-1"><strong>Email:</strong> @transaction.BuyerRenterEmail</p>
                                    <p class="card-text small mb-1"><strong>Phone:</strong> @transaction.BuyerRenterPhone</p>
                                    <p class="card-text small mb-0"><strong>Address:</strong> @transaction.BuyerRenterAddress</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info text-center">
            <i class="bi bi-info-circle" style="font-size: 3rem;"></i>
            <p class="mt-3">You haven't sold any properties yet.</p>
            <a asp-controller="Properties" asp-action="MyProperties" class="btn btn-primary">View My Listings</a>
        </div>
    }
</div>
