@model IEnumerable<RealEstateApp.Models.PropertyRequest>

@{
    ViewData["Title"] = "My Requests";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-send-check"></i> My Requests</h2>
        <a asp-controller="Properties" asp-action="Index" class="btn btn-outline-primary">
            <i class="bi bi-arrow-left"></i> Browse Properties
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (Model.Any())
    {
        <div class="row">
            @foreach (var request in Model)
            {
                <div class="col-md-6 mb-4">
                    <div class="card shadow-sm h-100">
                        <div class="card-header @(request.Status == RealEstateApp.Models.RequestStatus.Pending ? "bg-warning" : request.Status == RealEstateApp.Models.RequestStatus.Accepted ? "bg-success text-white" : "bg-danger text-white")">
                            <div class="d-flex justify-content-between align-items-center">
                                <span><i class="bi bi-@(request.RequestType == RealEstateApp.Models.RequestType.Buy ? "cart-check" : "key")"></i> @request.RequestType Request</span>
                                <span class="badge @(request.Status == RealEstateApp.Models.RequestStatus.Pending ? "bg-dark" : "bg-light text-dark")">@request.Status</span>
                            </div>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">@request.Property?.Title</h5>
                            <p class="card-text text-muted small">
                                <i class="bi bi-geo-alt"></i> @request.Property?.Address
                            </p>
                            <p class="card-text"><strong>Amount:</strong> @request.Property?.Price.ToString("C")</p>
                            <p class="card-text"><strong>Seller:</strong> @request.Seller?.UserName</p>
                            <p class="card-text"><strong>Requested:</strong> @request.CreatedAt.ToString("MMM dd, yyyy")</p>
                            
                            @if (request.Status != RealEstateApp.Models.RequestStatus.Pending)
                            {
                                <p class="card-text"><strong>Responded:</strong> @request.RespondedAt?.ToString("MMM dd, yyyy")</p>
                            }

                            @if (!string.IsNullOrEmpty(request.Message))
                            {
                                <hr />
                                <p class="card-text small"><strong>Your Message:</strong><br />@request.Message</p>
                            }

                            <div class="mt-3">
                                <a asp-controller="Properties" asp-action="Details" asp-route-id="@request.PropertyId" class="btn btn-sm btn-outline-primary">
                                    View Property
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info text-center">
            <i class="bi bi-info-circle" style="font-size: 3rem;"></i>
            <p class="mt-3">You haven't sent any requests yet.</p>
            <a asp-controller="Properties" asp-action="Index" class="btn btn-primary">Browse Properties</a>
        </div>
    }
</div>
