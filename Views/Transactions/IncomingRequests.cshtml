@model IEnumerable<RealEstateApp.Models.PropertyRequest>

@{
    ViewData["Title"] = "Incoming Requests";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-inbox"></i> Incoming Requests</h2>
        <a asp-controller="Properties" asp-action="MyProperties" class="btn btn-outline-primary">
            <i class="bi bi-arrow-left"></i> My Listings
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (Model.Any())
    {
        <div class="row">
            @foreach (var request in Model)
            {
                <div class="col-md-6 mb-4">
                    <div class="card shadow-sm h-100 border-warning">
                        <div class="card-header bg-warning">
                            <div class="d-flex justify-content-between align-items-center">
                                <span><i class="bi bi-@(request.RequestType == RealEstateApp.Models.RequestType.Buy ? "cart-check" : "key")"></i> @request.RequestType Request</span>
                                <span class="badge bg-dark">Pending</span>
                            </div>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">@request.Property?.Title</h5>
                            <p class="card-text text-muted small">
                                <i class="bi bi-geo-alt"></i> @request.Property?.Address
                            </p>
                            <p class="card-text"><strong>Amount:</strong> @request.Property?.Price.ToString("C")</p>
                            <p class="card-text"><strong>Requested:</strong> @request.CreatedAt.ToString("MMM dd, yyyy HH:mm")</p>
                            
                            <hr />
                            <h6 class="text-primary"><i class="bi bi-person"></i> Interested Buyer/Renter</h6>
                            <p class="card-text small mb-1"><strong>Name:</strong> @request.BuyerRenterName</p>
                            <p class="card-text small mb-1"><strong>Email:</strong> @request.BuyerRenterEmail</p>
                            <p class="card-text small mb-1"><strong>Phone:</strong> @request.BuyerRenterPhone</p>
                            <p class="card-text small mb-1"><strong>Address:</strong> @request.BuyerRenterAddress</p>

                            @if (!string.IsNullOrEmpty(request.Message))
                            {
                                <hr />
                                <p class="card-text small"><strong>Message:</strong><br />@request.Message</p>
                            }

                            <hr />
                            <div class="d-flex gap-2 mt-3">
                                <form asp-action="AcceptRequest" method="post" class="flex-fill">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@request.Id" />
                                    <button type="submit" class="btn btn-success w-100" onclick="return confirm('Accept this request? This will mark the property as @(request.RequestType == RealEstateApp.Models.RequestType.Buy ? "sold" : "rented") and reject all other pending requests.');">
                                        <i class="bi bi-check-circle"></i> Accept
                                    </button>
                                </form>
                                <form asp-action="RejectRequest" method="post" class="flex-fill">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@request.Id" />
                                    <button type="submit" class="btn btn-danger w-100" onclick="return confirm('Reject this request?');">
                                        <i class="bi bi-x-circle"></i> Reject
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info text-center">
            <i class="bi bi-info-circle" style="font-size: 3rem;"></i>
            <p class="mt-3">You don't have any pending requests at the moment.</p>
            <a asp-controller="Properties" asp-action="MyProperties" class="btn btn-primary">View My Listings</a>
        </div>
    }
</div>
