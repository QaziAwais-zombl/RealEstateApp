@model IEnumerable<RealEstateApp.Models.Property>

@{
    ViewData["Title"] = "My Favorites";
}

<div class="container mt-4">
    <h2><i class="bi bi-heart-fill text-danger"></i> My Favorites</h2>
    <hr />

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center py-5">
            <i class="bi bi-heart fs-1 d-block mb-3"></i>
            <h4>No Favorites Yet</h4>
            <p>Go browse properties and click the heart icon to save them here!</p>
            <a asp-controller="Properties" asp-action="Index" class="btn btn-dark mt-2">Browse Properties</a>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        @if (!string.IsNullOrEmpty(item.ImageUrl))
                        {
                            <img src="@item.ImageUrl" class="card-img-top" alt="@item.Title" style="height: 200px; object-fit: cover;">
                        }
                        else
                        {
                            <div class="bg-secondary text-white d-flex align-items-center justify-content-center" style="height: 200px;">
                                <i class="bi bi-house fs-1"></i>
                            </div>
                        }

                        <div class="card-body">
                            <h5 class="card-title">@item.Title</h5>
                            <h6 class="text-success fw-bold">@item.Price.ToString("C")</h6>
                            <p class="card-text text-muted">@item.Address</p>

                            <div class="d-flex justify-content-between mt-3">
                                <a asp-controller="Properties" asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-dark btn-sm">Details</a>

                                <a asp-controller="Favorites" asp-action="Toggle" asp-route-propertyId="@item.Id"
                                   class="btn btn-danger btn-sm">
                                    <i class="bi bi-x-circle"></i> Remove
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>