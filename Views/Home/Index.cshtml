@model IEnumerable<RealEstateApp.Models.Property>

@{
    ViewData["Title"] = "Real Estate Properties";
}

<div class="container mt-4">
    <!-- Hero Section -->
    <div class="jumbotron bg-light p-5 rounded-3 mb-4">
        <h1 class="display-4">Find Your Dream Property</h1>
        <p class="lead">Browse through our extensive collection of properties</p>

        <!-- Search Bar -->
        <form method="get" asp-action="Index" class="mt-4">
            <div class="row g-3">
                <div class="col-md-10">
                    <div class="input-group input-group-lg">
                        <span class="input-group-text">
                            <i class="bi bi-search"></i>
                        </span>
                        <input type="text"
                               name="searchString"
                               value="@ViewData["CurrentFilter"]"
                               class="form-control"
                               placeholder="Search by title or address..." />
                    </div>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary btn-lg w-100">Search</button>
                </div>
            </div>
        </form>

        @if (!string.IsNullOrEmpty(ViewData["CurrentFilter"]?.ToString()))
        {
            <div class="mt-3">
                <span class="badge bg-info">Searching for: @ViewData["CurrentFilter"]</span>
                <a asp-action="Index" class="btn btn-sm btn-outline-secondary ms-2">Clear Search</a>
            </div>
        }
    </div>

    <!-- Properties Count -->
    @if (Model.Any())
    {
        <div class="mb-3">
            <h5 class="text-muted">
                @Model.Count() @(Model.Count() == 1 ? "Property" : "Properties") Found
            </h5>
        </div>
    }

    <!-- Properties Grid -->
    @if (Model.Any())
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var property in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm hover-card">
                        <!-- Property Image -->
                        @if (!string.IsNullOrEmpty(property.ImageUrl))
                        {
                            <img src="@property.ImageUrl"
                                 class="card-img-top"
                                 alt="@property.Title"
                                 style="height: 250px; object-fit: cover;" />
                        }
                        else
                        {
                            <div class="card-img-top bg-secondary d-flex align-items-center justify-content-center"
                                 style="height: 250px;">
                                <i class="bi bi-house-door text-white" style="font-size: 4rem;"></i>
                            </div>
                        }

                        <!-- Property Details -->
                        <div class="card-body">
                            <span class="badge bg-primary mb-2">@property.Category?.Name</span>
                            <h5 class="card-title">@property.Title</h5>
                            <p class="card-text text-muted">
                                <i class="bi bi-geo-alt"></i> @property.Address
                            </p>
                            <h4 class="text-success fw-bold">
                                @property.Price.ToString("C")
                            </h4>
                        </div>

                        <!-- Card Footer -->
                        <div class="card-footer bg-transparent">
                            <a asp-controller="Properties"
                               asp-action="Details"
                               asp-route-id="@property.Id"
                               class="btn btn-outline-primary w-100">
                                <i class="bi bi-eye"></i> View Details
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info text-center" role="alert">
            <i class="bi bi-info-circle fs-1 d-block mb-3"></i>
            <h4>No Properties Found</h4>
            <p class="mb-0">
                @if (!string.IsNullOrEmpty(ViewData["CurrentFilter"]?.ToString()))
                {
                    <span>No properties match your search criteria. Try a different search term.</span>
                }
                else
                {
                    <span>There are no properties available at the moment. Please check back later.</span>
                }
            </p>
        </div>
    }
</div>

<!-- Custom CSS for hover effect -->
<style>
    .hover-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .hover-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
        }
</style>