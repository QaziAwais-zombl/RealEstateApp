@model RealEstateApp.Models.Property
@using Microsoft.AspNetCore.Identity
@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "Property Details";
    var currentUserId = UserManager.GetUserId(User);
    var isAvailable = Model.Status == RealEstateApp.Models.PropertyStatus.Available;
    var canRequestBuyOrRent = User.Identity.IsAuthenticated && Model.OwnerId != currentUserId && isAvailable;
}

<div class="container mt-4">
    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow mb-4">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl" class="card-img-top" alt="@Model.Title" style="max-height: 500px; object-fit: cover;">
                }
                else
                {
                    <div class="bg-secondary text-white text-center py-5" style="height: 300px;">
                        <i class="bi bi-house-door" style="font-size: 5rem;"></i>
                    </div>
                }

                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <span class="badge bg-primary mb-2">@Model.Category?.Name</span>
                            <span class="badge bg-info mb-2">@(Model.PropertyType == RealEstateApp.Models.PropertyType.ForSale ? "For Sale" : "For Rent")</span>
                            <span class="badge @(isAvailable ? "bg-success" : "bg-secondary") mb-2">@Model.Status</span>
                            <h2 class="card-title">@Model.Title</h2>
                            <p class="text-muted"><i class="bi bi-geo-alt-fill"></i> @Model.Address</p>
                        </div>
                        <h3 class="text-success">@Model.Price.ToString("C")</h3>
                    </div>
                    <hr>

                    <h5>Description</h5>
                    <p class="lead" style="font-size: 1rem;">@Model.Description</p>

                    <div class="mt-4 d-flex gap-2">
                        @if (User.Identity.IsAuthenticated)
                        {
                            @if (isAvailable && Model.OwnerId != currentUserId)
                            {
                                <a asp-controller="Favorites" asp-action="Toggle" asp-route-propertyId="@Model.Id" class="btn btn-outline-danger">
                                    <i class="bi bi-heart"></i> Add to Favorites
                                </a>
                            }

                            @if (Model.OwnerId == currentUserId && isAvailable)
                            {
                                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            }

                            @if (canRequestBuyOrRent)
                            {
                                @if (Model.PropertyType == RealEstateApp.Models.PropertyType.ForSale)
                                {
                                    <a asp-controller="Transactions" asp-action="SendBuyRequest" asp-route-id="@Model.Id" class="btn btn-success">
                                        <i class="bi bi-cart-check"></i> Request to Buy
                                    </a>
                                }
                                else
                                {
                                    <a asp-controller="Transactions" asp-action="SendRentRequest" asp-route-id="@Model.Id" class="btn btn-primary">
                                        <i class="bi bi-key"></i> Request to Rent
                                    </a>
                                }
                            }
                        }

                        <a asp-action="Index" class="btn btn-secondary ms-auto">Back to List</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow border-0">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-person-circle"></i> Listed by</h5>
                    <p class="card-text text-muted">@Model.Owner?.UserName</p>
                    <hr />
                    <button class="btn btn-primary w-100 mb-2"><i class="bi bi-telephone"></i> Call Agent</button>
                    <button class="btn btn-outline-primary w-100"><i class="bi bi-envelope"></i> Email Agent</button>
                </div>
            </div>
        </div>
    </div>
</div>