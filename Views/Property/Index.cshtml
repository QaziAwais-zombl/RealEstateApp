@model IEnumerable<RealEstateApp.Models.Property>

@{
    ViewData["Title"] = "Manage Properties";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-buildings"></i> Property Management</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create New Property
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-hover table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>Image</th>
                        <th>Title</th>
                        <th>Category</th>
                        <th>Price</th>
                        <th>Address</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @if (!string.IsNullOrEmpty(item.ImageUrl))
                                {
                                    <img src="@item.ImageUrl" alt="@item.Title" style="width: 60px; height: 60px; object-fit: cover; border-radius: 5px;" />
                                }
                                else
                                {
                                    <div class="bg-secondary d-flex align-items-center justify-content-center"
                                         style="width: 60px; height: 60px; border-radius: 5px;">
                                        <i class="bi bi-house text-white"></i>
                                    </div>
                                }
                            </td>
                            <td>@item.Title</td>
                            <td><span class="badge bg-info">@item.Category?.Name</span></td>
                            <td class="fw-bold text-success">@item.Price.ToString("C")</td>
                            <td>@item.Address</td>
                            <td class="text-center">
                                <div class="btn-group" role="group">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info" title="Details">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning" title="Edit">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" title="Delete">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center">
            <i class="bi bi-info-circle fs-1 d-block mb-3"></i>
            <h4>No Properties Yet</h4>
            <p>Start by creating your first property listing.</p>
            <a asp-action="Create" class="btn btn-primary mt-2">
                <i class="bi bi-plus-circle"></i> Create Property
            </a>
        </div>
    }
</div>