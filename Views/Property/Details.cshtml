@model RealEstateApp.Models.Property

@{
    ViewData["Title"] = "Property Details";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow">
                <!-- Property Image -->
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl" class="card-img-top" alt="@Model.Title" style="max-height: 500px; object-fit: cover;" />
                }
                else
                {
                    <div class="card-img-top bg-secondary d-flex align-items-center justify-content-center" style="height: 400px;">
                        <i class="bi bi-house-door text-white" style="font-size: 6rem;"></i>
                    </div>
                }

                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <div>
                            <span class="badge bg-primary mb-2">@Model.Category?.Name</span>
                            <h2 class="card-title">@Model.Title</h2>
                        </div>
                        <h3 class="text-success fw-bold">@Model.Price.ToString("C")</h3>
                    </div>

                    <hr />

                    <div class="mb-4">
                        <h5><i class="bi bi-geo-alt-fill text-danger"></i> Location</h5>
                        <p class="ms-4">@Model.Address</p>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <div class="mb-4">
                            <h5><i class="bi bi-card-text"></i> Description</h5>
                            <p class="ms-4">@Model.Description</p>
                        </div>
                    }

                    <div class="mb-4">
                        <h5><i class="bi bi-info-circle"></i> Property Information</h5>
                        <table class="table table-sm ms-4">
                            <tr>
                                <td class="fw-bold">Property ID:</td>
                                <td>#@Model.Id</td>
                            </tr>
                            <tr>
                                <td class="fw-bold">Category:</td>
                                <td>@Model.Category?.Name</td>
                            </tr>
                            <tr>
                                <td class="fw-bold">Price:</td>
                                <td class="text-success fw-bold">@Model.Price.ToString("C")</td>
                            </tr>
                            <tr>
                                <td class="fw-bold">Address:</td>
                                <td>@Model.Address</td>
                            </tr>
                        </table>
                    </div>

                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <div class="d-flex gap-2 mt-4">
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Back to List
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="mt-4">
                            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Back to Properties
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <div class="card shadow mb-3">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-person-circle"></i> Contact Agent</h5>
                    <p class="card-text">Interested in this property? Get in touch with us today!</p>
                    <button class="btn btn-primary w-100 mb-2">
                        <i class="bi bi-telephone"></i> Call Now
                    </button>
                    <button class="btn btn-outline-primary w-100">
                        <i class="bi bi-envelope"></i> Send Message
                    </button>
                </div>
            </div>

            <div class="card shadow">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-calendar-check"></i> Schedule a Viewing</h5>
                    <p class="card-text">Book an appointment to view this property.</p>
                    <button class="btn btn-success w-100">
                        <i class="bi bi-calendar-plus"></i> Book Viewing
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>